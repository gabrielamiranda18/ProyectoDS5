---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/header.astro';
---
<Layout title="Inicia sesión">

  <main>
    <Header/>
    <body style="background-color: #f0f0f0;"> 
      <div class="cuadro-blanco">
          <!-- Contenido del cuadro -->  
          <div class="login-container">
            <h1>Iniciar sesión</h1>
            <div class="input-container">
                <input type="email" id="email" placeholder="Correo electrónico">
                <input type="password" id="contraseña" placeholder="Contraseña">
            </div>
            <div class="restablecer_contra">
              <p>Crear o restablecer contraseña</p>
            </div>
            <button class="login-btn">Iniciar sesión</button>
            <p>¿Aún no tiene una cuenta? <a href="#" class="crear-cuenta">Crear cuenta</a></p>
        </div>
  </body>
  </main>
  <Footer />
</Layout>

<style>
  /* Estilo para el contenedor principal */
.login-container {
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    text-align: center;
    font-family: Arial, sans-serif;
}

/* Estilo del título */
h1 {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

/* Contenedor del input para ajustar estilos */
/* Contenedor del input */
.input-container {
    margin-top: 70px;
    position: relative;
    margin-bottom: 20px;
    width: 100%;
}

/* Estilo del input de correo */
input[type="email"] {
    width: 70%;
    padding: 10px;
    font-size: 16px;
    border: none;
    border-bottom: 1px solid #ccc; 
    border-radius: 5px;
    outline: none;
    transition: border-color 0.3s, box-shadow 0.3s;
}

/* Placeholder con estilo más claro */
input[type="email"]::placeholder {
    color: #999;
    text-align: center;
    font-style: italic;
}

/* Efecto de hover/focus en el input */
input[type="email"]:focus {
    border-bottom: 1px solid black; 
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); 
}

/* Estilo del input de contraseña */
input[type="password"] {
    margin-top: 40px; /* Añade espacio entre los inputs */
    width: 70%;
    padding: 10px;
    font-size: 16px;
    border: none;
    border-bottom: 1px solid #ccc; /* Solo muestra la línea inferior */
    border-radius: 5px; /* Redondea las esquinas (solo visible cuando se haga focus) */
    outline: none;
    transition: border-color 0.3s, box-shadow 0.3s; /* Transición suave para la línea y el contorno */
}

/* Placeholder con estilo más claro */
input[type="password"]::placeholder {
    color: #999;
    text-align: center;
    font-style: italic;
}

/* Efecto de hover/focus en el input */
input[type="password"]:focus {
    border-bottom: 1px solid black; /* La línea inferior cambia a negro */
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); /* Añade un contorno alrededor */
}

.restablecer_contra{
  font-style: italic;
  color:#37B7C3 ;
}
/* Estilo del botón de iniciar sesión */
.login-btn {
  margin-top: 40px;
    background-color: #37B7C3; 
    color: white; 
    border: none; /* Sin bordes visibles */
    border-radius: 50px; /* Bordes redondeados */
    padding: 15px 70px; /* Espaciado interno para el tamaño del botón */
    font-size: 16px; 
    font-weight: bold; 
    cursor: pointer;
    text-align: center; 
    transition: background-color 0.3s ease; 
}

/* Efecto hover para cambiar el color al pasar el ratón */
.login-btn:hover {
    background-color: #37B7C3; /* Fondo más oscuro en hover */
}
/* Estilo del enlace "Crear cuenta" */
.crear-cuenta {
  margin-top: 90px;
    color: #37B7C3; 
    text-decoration: none; /* Eliminar el subrayado del enlace */
    font-weight: bold; /* Texto en negrita */
    transition: color 0.3s ease; /* Transición suave en el hover */
}

/* Efecto hover en el enlace */
.crear-cuenta:hover {
    color: #37B7C3; 
}
p {
    margin-top: 50px; /* Añade 20px de espacio entre el botón y el texto del párrafo */
}

  
  .cuadro-blanco {
            width: 425px;
            height: 600px; 
            background-color: white; 
            border: 1px solid #ccc; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
            margin: 50px auto; 
            padding: 20px; 
            border-radius: 10px; 
        }
        body {
    margin-top: 89px; /* Espacio entre el header y el contenido */
    margin-bottom: 200px; /* Espacio entre el contenido y el footer */
	}
    

</style>