    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const stars = document.querySelectorAll(".star");
            const writeReviewButton = document.querySelector(".write-review");
            const reviewForm = document.getElementById("review-form");
            const submitReviewButton = document.getElementById("submit-review");
            const reviewsList = document.getElementById("reviews-list");
            let ratingValue = 0;
    
            // Verifica que los elementos existan
            if (writeReviewButton) {
                // Función para mostrar el formulario de reseñas
                writeReviewButton.addEventListener("click", () => {
                    if (reviewForm) {
                        reviewForm.style.display =
                            reviewForm.style.display === "none"
                                ? "block"
                                : "none";
                        resetStars(); // Resetea las estrellas cada vez que se muestra el formulario
                    }
                });
            }
    
            // Agregar funcionalidad a las estrellas
            stars.forEach((star, index) => {
                star.addEventListener("click", () => {
                    ratingValue = index + 1; // El índice es 0-based, así que agregamos 1
                    resetStars();
                    highlightStars(ratingValue);
                });
    
                // Llenar estrellas al pasar el ratón
                star.addEventListener("mouseenter", () => {
                    resetStars(); // Resetea las estrellas antes de llenar
                    highlightStars(index + 1); // Llenar hasta la estrella actual
                });
    
                // Resetear las estrellas al salir el ratón
                star.addEventListener("mouseleave", () => {
                    resetStars(); // Restablece las estrellas
                    highlightStars(ratingValue); // Rellena según la calificación actual
                });
            });
    
            function resetStars() {
                stars.forEach((star) => {
                    star.classList.remove("selected");
                });
            }
    
            function highlightStars(value: number) { // Especificar tipo de parámetro
                for (let i = 0; i < value; i++) {
                    stars[i].classList.add("selected");
                }
            }
    
            // Manejar el envío del formulario
            if (submitReviewButton) {
                submitReviewButton.addEventListener("click", (e) => {
                    e.preventDefault();
    
                    // Asegurarse de que reviewTextElement no sea null y que sea del tipo correcto
                    const reviewTextElement = document.getElementById(
                        "review-text",
                    ) as HTMLTextAreaElement; // Afirmar el tipo
    
                    const reviewText = reviewTextElement
                        ? reviewTextElement.value.trim() // Ahora 'value' es reconocido
                        : ""; 
    
                    if (ratingValue > 0 && reviewText) {
                        addReview(ratingValue, reviewText);
                        if (reviewTextElement) {
                            reviewTextElement.value = ""; // Limpiar el textarea
                        }
                        ratingValue = 0; // Resetear la puntuación
                        resetStars(); // Resetear estrellas
                        if (reviewForm) {
                            reviewForm.style.display = "none"; // Ocultar el formulario después de enviar
                        }
                    } else {
                        alert(
                            "Por favor, selecciona una puntuación y escribe una reseña.",
                        );
                    }
                });
            }
    
            // Función para agregar reseña a la lista
            function addReview(rating: number, text: string) { // Especificar tipos de parámetros
                const reviewItem = document.createElement("div");
                reviewItem.classList.add("review-item");
                reviewItem.innerHTML = `
                    <div class="rating-stars">${"★".repeat(rating)}${"☆".repeat(5 - rating)}</div>
                    <p>${text}</p>
                `;
                if (reviewsList) {
                    reviewsList.appendChild(reviewItem); // Asegurarse de que reviewsList no es null
                }
            }
        });
    </script>
    
    
